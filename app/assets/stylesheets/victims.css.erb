* {
  margin: 0;
  padding: 0;
}

html {
  height: 100%;
}
body {
  background: url("<%= asset_path 'Blue_Starburst_Background_by_brightrose.jpg' %>");
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

/* Popcorn button positioning and animation for hover and click.*/

#popcorn {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2;
}
button {
  padding: 0;
  border: none;
  background: none;
  outline: none;
}
#content:hover {
  -webkit-transform: scale(1.2);
  -moz-transform: scale(1.2);
  -o-transform: scale(1.2);
  transform: scale(1.2);
}
#content:active {
  -webkit-transform: scale(1);
  -moz-transform: scale(1);
  -o-transform: scale(1);
  transform: scale(1);
}

/* Red background and animation for fade in and hover effect.*/

#bg {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  background: url("<%= asset_path 'background-red.jpg' %>");
  background-size: 100% 100%;
  background-repeat: no-repeat;
  opacity: 0;
  z-index: -1;
  transition: opacity .30s ease-in-out;
  -moz-transition: opacity .30s ease-in-out;
  -webkit-transition: opacity .30s ease-in-out;
}
#popcorn:hover ~ #bg {
  opacity: 1;
  z-index: 1;
}

/* Placing menu and menu hamburger */

.footer {
  display: flex;
  flex-flow: row;
  background-color: rgba(0, 0, 0, 0.5);;
